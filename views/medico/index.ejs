<br>
<div class="card bg-light mb-3">
	<div class="card-header">Registro de Medicos</div>
	<div class="card-body">
	
		<div class="container">
		
			<br>
			<h4>Lista de Medicos</h4>
		
		
			<% if (result.length == 0) { %>
				<h4>
					0 medico
				</h4>
				<% } else { %>
					<table class="table table-striped table-bordered">
						<thead class="thead-dark ">
							<th>Nro</th>
							<th>id</th>
							<th>Nombre</th>
							<th>Paterno</th>
							<th>Materno</th>
		
							<th>Creado</th>
							<th>Actualizado</th>
							<th colspan="3"></th>
						</thead>
		
						<tbody>
							<% result.forEach((item, i) => { %>
								<tr>
									<td>
										<%= ++i%>
									</td>
		
									<td>
										<%= item.id %>
									</td>
									<td>
										<%= item.idPersona.nombre %>
									</td>
									<td>
										<%= item.idPersona.paterno %>
									</td>
									<td>
										<%= item.idPersona.materno %>
									</td>
									<td>
										<%  var fecha = new Date(item.createdAt)%>
											<%= fecha.toLocaleDateString()  %>
									</td>
									<td>
										<%  var fecha = new Date(item.updatedAt)%>
											<%= fecha.toLocaleDateString()  %>
									</td>
									<td>
										<a href="/medico/mostrar/<%= item.id %>">
											<span style="font-size: 1em; color: green;">
												<i class="fas fa-eye"></i>
											</span>
										</a>
									</td>
									<td>
										<!-- <a href="/medico/eliminar/<%= item.id %>"> -->
											<a href="#">
											<span style="font-size: 1em; color: red;">
												<i class="fas fa-user-times"></i>
											</span>
										</a>
									</td>
									<td>
										<a href="/medico/editar/<%= item.id %>">
											<span style="font-size: 1em; color: blue;">
												<i class="fas fa-edit"></i>
											</span>
										</a>
									</td>
		
								</tr>
								<% }) %>
						</tbody>
					</table>
		
					<% } %>
		
						<br>
						<a href="/medico/crear" class="btn btn-primary btn-lg active">Nuevo</a>
		</div>
	</div>
</div>